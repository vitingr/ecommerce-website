// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

// default(auto) = default value

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  uid          String? @unique
  nome         String?
  sobrenome    String?
  nomeCompleto String?
  email        String? @unique
  admin        Int?
  foto         String?
  compras      Int?
}

model Refrigerator {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  categoria    String  @default("home-appliences")
  subcategoria String  @default("refrigerators")
  nome         String? @unique
  descricao    String?
  preco        Float?
  desconto     Int?
  cor          String?
  modelo       String?
  capacidade   Int?
  voltagem     String?
  numPortas    String?
  display      String?
  puxador      String?
  recursos     String?
  foto         String?
  quantidade   Int?
}

